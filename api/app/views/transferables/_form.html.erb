<%= admin_form_for @transferable do |form| %>
  <%= form.error_notification %>
  <%= form.hidden_field :game_id %>
  <%= form.input :identifier %>
  <%= form.input :name %>
  <%= form.input :value %>
  <%= form.input :purchasable %>
  <%= form.image_input :image %>
  <%= form.field_set 'Properties' do %>
    <div data-json-editor="true" class="mb-3">
      <div style="height: 400px; width: 400px"></div>
      <input type="hidden" name="transferable[properties]" value="<%= form.object.properties.to_json %>" />
    </div>
  <% end %>
  <%= form.buttons cancel_path: game_path(form.object.game) %>
<% end %>
