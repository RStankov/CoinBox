<% page.title 'Games', @games.size %>

<% page.actions do %>
  <%= action_link 'New game', new_game_path %>
<% end %>

<%= table_for @games do |table| %>
  <% table.column :icon, class: 'small' do |game| %>
    <%= link_to game_path(game) do %>
      <%= attachment_image_tag game.icon, height: 50 %>
    <% end %>
  <% end %>
  <% table.column :name do |game| %>
    <%= link_to game.name, game_path(game) %>
  <% end %>
  <% table.number 'API keys' do |game| %>
    <%= game.api_keys_count %>
  <% end %>
  <% table.number :consumables_count %>
  <% table.number :transferables_count %>
  <% table.number :players_count %>
  <% table.actions do |game| %>
    <%= action_link 'Players', players_path(game_id: game.id) %>
    <%= edit_action edit_game_path(game) %>
    <%= delete_action game_path(game) %>
  <% end %>
<% end %>
